extends layout

block content

  h1 #{title}: #{client.name}
  p= client.contact
  
  if client_orders.length
  
    p #[strong Delete the following orders before attempting to delete this client.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Orders
    
      dl
      each order in client_orders
        dt 
          a(href=book.url) #{client.name}
        dd #{order.status}

  else
    p Do you really want to delete this Client?
    
    form(method='POST' action='')
      div.form-group
        input#clientid.form-control(type='hidden',name='clientid', required='true', value=author._id )

      button.btn.btn-primary(type='submit') Delete